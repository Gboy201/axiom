{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/submit-application",
      "dest": "/api/submit-application.js",
      "methods": ["POST"]
    },
    {
      "src": "/api/submit-contact",
      "dest": "/api/submit-contact.js",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/submit-application.js": {
      "maxDuration": 30
    },
    "api/submit-contact.js": {
      "maxDuration": 30
    }
  }
}